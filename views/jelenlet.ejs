 <%- include ('header') %>

 <title>Jelenlét</title>

    <style>
        .custom-bg {
            background-color: #2d336b;
        }

        p {
            margin-bottom: -10px;
        }

        .title {
            font-size: 30px;
            font-weight: bold;
        }

        .subtitle {
            font-size: 22px;
        }

        .box-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .box {
            width: 100px;
            height: 50px;
            margin: 5px;
            text-align: center;
            line-height: 50px;
            font-weight: bold;
            border-radius: 5px;
        }

        .red {
            background-color: red;
            color: white;
        }

        .green {
            background-color: green;
            color: white;
        }

        .table-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .table-box {
            border: 2px solid black;
            padding: 10px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 5px;
        }

        .extra-info {
            text-align: center;
            font-size: 20px;
            margin-top: 20px;
        }

        .comment-box {
            background-color: #f8f9fa;
            border: 1px solid #ccc;
            padding: 10px;
            width: 80%;
            margin: 10px auto;
            border-radius: 5px;
        }
    </style>
</head>
<body style="background-color: #f5f5f5">

    
    <div class="container text-center" style="margin-top: 50px">
        <p class="subtitle" id="ev"><%= currentYear%></p>
        <p class="title"><%= currentMonth %></p>
    </div>

    <div class="text-center" style="margin-top: 25px; font-size: 25px">
        <div class="row justify-content-center">
            <div class="col-md-auto">
                <strong>Szerda</strong>
            </div>
            <div class="col-md-auto">
                <strong>Péntek</strong>
            </div>
        </div>
    </div>

    <div class="table-container">
        <div class="table-box">
            <div id="szerda_1" class="box <%= attendance[0] %>"> </div>
            <div id="pentek_1" class="box <%= attendance[1] %>"> </div>
            <div id="szerda_2" class="box <%= attendance[2] %>"> </div>
            <div id="szerda_2" class="box <%= attendance[3] %>"> </div>
            <div id="szerda_3" class="box <%= attendance[4] %>"> </div>
            <div id="szerda_3" class="box <%= attendance[5] %>"> </div>
            <div id="szerda_4" class="box <%= attendance[6] %>"> </div>
            <div id="szerda_4" class="box <%= attendance[7] %>"> </div>
        </div>
    </div>
    <div class="extra-info">
        <p style="margin: 5px"><strong>Hiányzás ebben a hónapban:</strong> <%= absence%></p> 
            <strong>Értesítések:</strong> <br>
        <div class="comment-box">
          
            <% comments.forEach(function(comment) { %>
            
              <%= comment %>
            <br>
            <% }) %>
          

        </div>
    </div>
 <%- include ('footer') %>
</body>

</html>
